<div class="eterne-girls wrapper aos-init aos-animate" data-aos="fade-up">
    <div class="home-page-title wrapper">
        {{ section.settings.eterneGirlsTitle }}
    </div>
    <div class="home-page-subtitle wrapper">
        {{ section.settings.eterneGirlsSubtitle }}
    </div>
    <div class="eterne-girls__wrapper">
        <div class="eterne-girls__left">
            <a href="{{ section.settings.left_url_top_img }}" target="_blank" class="eterne-girls__top-img">
                <div class="hidden-hover">
                    <img class="img lazyload fade-in" src="{{ section.settings.left_eterne_girls_top_img | img_url: 'master'}}" alt="">
                </div>
            </a>
            <a href="{{ section.settings.left_url_bottom_img }}" target="_blank" class="eterne-girls__bottom-img">
                <div class="hidden-hover">
                    <img class="img lazyload fade-in" src="{{ section.settings.left_eterne_girls_bottom_img | img_url: 'master'}}" alt="">
                </div>
            </a>
        </div>
        <div class="eterne-girls__right">
            <a href="{{ section.settings.rigth_url_top_img }}" target="_blank" class="eterne-girls__top-img">
                <div class="hidden-hover">
                    <img class="img lazyload fade-in" src="{{ section.settings.rigth_eterne_girls_top_img | img_url: 'master'}}" alt="">
                </div>
            </a>
            <a href="{{ section.settings.rigth_url_bottom_img }}" target="_blank" class="eterne-girls__bottom-img">
                <div class="hidden-hover">
                    <img class="img lazyload fade-in" src="{{ section.settings.rigth_eterne_girls_bottom_img | img_url: 'master'}}" alt="">
                </div>
            </a>
        </div>
    </div>
</div>




