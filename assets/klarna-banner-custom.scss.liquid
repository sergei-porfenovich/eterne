.klarna-banner-custom {
    border: 1px #e6e6e6 solid;
    border-radius: 5px;
    padding: 10px 14px;
    display: flex;
    align-items: center;
    margin-top: 1.5em;

    .klarna-banner-custom__img {
        display: flex;
        align-items: center;
        margin-right: 12px;

        img {
            max-width: 100%;
            height: auto;
        }
    }

    .klarna-banner-custom__text {
        font-size: 12px;
    }
}