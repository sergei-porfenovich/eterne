// Home page section - new releases slider
.new-releases {
    max-width: 1280px;
    margin: 0 auto 60px;
    width: 100%;
    overflow: hidden;

    @media (min-width: 481px) {
        margin: 0 auto 80px;
    }

    @media (min-width: 768px) {
        margin: 0 auto 114px;
    }

    .new-releases__slider {
        padding: 0 15px;
        position: relative;
        max-width: 203px;
        margin: 0 auto;

        @media (min-width: 481px) {
            width: 100%;
            max-width: 285px;
            padding: 0 22px;
        }

        @media (min-width: 768px) {
            max-width: 100%;
            padding: 0 100px;
        }

        @media (min-width: 991px) {
            padding: 0 30px;
            max-width: 814px;
        }

        .swiper-slide {
            pointer-events: none;
            max-width: 203px;

            @media (min-width: 481px) {
                max-width: 285px;
                width: 100%;
            }

            @media (min-width: 768px) {
                max-width: 100%;
                width: 100%;
            }
        }

        .new-releases-next {
            right: -48px;

            @media (min-width: 481px) {
                right: -34px;
            }

            @media (min-width: 768px) {
                right: 30px;
            }

            @media (min-width: 991px) {
                right: -44px;
            }
        }

        .new-releases-prev {
            left: -48px;

            @media (min-width: 481px) {
                left: -34px;
            }

            @media (min-width: 768px) {
                left: 30px;
            }

            @media (min-width: 991px) {
                left: -44px;
            }
        }

        .new-releases__item-wrap {
            opacity: .3;
            transition: all .5s ease-in-out;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-flow: column;

            &:hover {
                img {
                    transform: scale(1.15);
                }
            }

            img {
                max-width: 100%;
                height: auto;
                display: block;
                min-height: 262px;
                max-height: 262px;
                transition: all 1.5s ease-in-out;
                object-fit: cover;
                object-position: top;

                @media (min-width: 481px) {
                    min-height: 350px;
                    max-height: 350px;
                }
            }

            .new-releases__item_description {
                margin-top: 15px;
                max-width: 145px;
                width: 100%;
                text-transform: uppercase;
                font-size: 14px;
                line-height: 16px;
                color: #2B2B2B;
                text-align: center;

                @media (min-width: 481px) {
                    max-width: 180px;
                }
            }
        }

        .swiper-slide-visible {
            pointer-events: auto;

            .new-releases__item-wrap {
                opacity: 1;
                transition: all .5s ease-in-out;
            }
        }
    }
}

