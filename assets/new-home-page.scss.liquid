                }
            }
        }

        .about-product__right {
            display: flex;
            align-items: flex-start;
            flex-flow: column;

            @media (min-width: 768px) {
                padding-left: 32px;
            }

            @media (min-width: 991px) {
                padding-left: 45px;
            }

            .about-product__title {
                font-size: 26px;
                line-height: 30px;
                text-transform: uppercase;
                margin-bottom: 20px;

                @media (min-width: 481px) {
                    font-size: 38px;
                    line-height: 45px;
                    margin-bottom: 24px;
                    max-width: 368px;
                    width: 100%;
                }

                @media (min-width: 991px) {
                    font-size: 40px;
                    line-height: 47px;
                    margin-bottom: 35px;
                }
            }

            .about-product__description {
                font-size: 12px;
                line-height: 24px;
                margin-bottom: 20px;

                @media (min-width: 481px) {
                    font-size: 16px;
                    line-height: 24px;
                    margin-bottom: 24px;
                    max-width: 418px;
                    width: 100%;
                }

                @media (min-width: 991px) {
                    margin-bottom: 35px;
                }
            }

            .about-product__button {
                color: #fff;
                font-size: 14px;
                line-height: 16px;
                padding: 7px 12px;
                background: #2B2B2B;
                text-decoration: none;
                transition: all .5s ease-in-out;

                @media (min-width: 481px) {
                    font-size: 16px;
                    line-height: 19px;
                    padding: 15.5px 21px;
                }

                &:hover {
                    background: #222222;
                    box-shadow: 0 2px 20px -2px #1b213a66;
                }
            }
        }
    }
}