// Home page section - styles slider
.styles-slider {
    padding: 0 15px;
    margin: 0 auto 57px;
    overflow: hidden;
    max-width: 360px;

    @media (min-width: 481px) {
        padding: 0 30px;
        margin: 0 auto 80px;
        max-width: 600px;
    }

    @media (min-width: 768px) {
        margin: 0 auto 137px;
    }

    @media (min-width: 991px) {
        max-width: 891px;
    }

    .swiper-button-prev, .swiper-button-next {
        top: calc(50% + 24px);
    }

    .swiper-button-next {
        right: 20px;

        @media (min-width: 481px) {
            right: 15%;
        }

        @media (min-width: 676px) {
            right: 70px;
        }

        @media (min-width: 991px) {
            right: 0;
        }
    }

    .swiper-button-prev {
        left: 20px;

        @media (min-width: 481px) {
            left: 15%;
        }

        @media (min-width: 676px) {
            left: 70px;
        }

        @media (min-width: 991px) {
            left: 0;
        }
    }

    .styles-slider__wrapper {
        max-width: 192px;
        width: 100%;
        margin: 0 auto;
        position: relative;

        @media (min-width: 481px) {
            max-width: 240px;
        }

        @media (min-width: 676px) {
            max-width: 292px;
        }

        .swiper-slide {
            transform: scale(.7);
            transition: .25s ease-in-out;
            opacity: .3;
            z-index: 0;

            @media (min-width: 991px) {
                opacity: 1;
                transform: scale(.7);
            }

            &.swiper-slide-next {
                @media (max-width: 992px) {
                    transform: translateX(-100px) scale(.7);
                    pointer-events: none;
                }

                @media (max-width: 675px) {
                    transform: translateX(-110px) scale(.8);
                }

                @media (max-width: 560px) {
                    transform: translateX(-120px) scale(.8);
                }

                @media (max-width: 480px) {
                    transform: translateX(-88px) scale(.65);
                }
            }

            &.swiper-slide-prev {
                @media (max-width: 992px) {
                    transform: translateX(100px) scale(.7);
                    pointer-events: none;
                }

                @media (max-width: 675px) {
                    transform: translateX(110px) scale(.8);
                }

                @media (max-width: 560px) {
                    transform: translateX(120px) scale(.8);
                }

                @media (max-width: 480px) {
                    transform: translateX(88px) scale(.65);
                }
            }

            .styles-slider__item_description {
                transform: scale(1.3);
                transition: .25s;
            }

            &.swiper-slide-active {
                transform: scale(1);
                opacity: 1;
                z-index: 1;
                pointer-events: auto;

                .styles-slider__item_description {
                    transform: scale(1);
                }

                &:hover {
                    img {
                        transform: scale(1.15);
                    }
                }
            }
        }

        .styles-slider__item-wrap {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-flow: column;

            img {
                max-width: 100%;
                height: auto;
                display: block;
                min-height: 288px;
                max-height: 288px;
                object-fit: cover;
                transition: all 1.5s ease-in-out;

                @media (min-width: 481px) {
                    min-height: 320px;
                    max-height: 320px;
                }

                @media (min-width: 676px) {
                    min-height: 438px;
                    max-height: 438px;
                }
            }

            .styles-slider__item_description {
                margin-top: 12px;
                max-width: 180px;
                width: 100%;
                text-transform: uppercase;
                font-size: 14px;
                line-height: 16px;
                color: #2B2B2B;
                text-align: center;

                @media (min-width: 481px) {
                    margin-top: 20px;
                }
            }
        }
    }
}

