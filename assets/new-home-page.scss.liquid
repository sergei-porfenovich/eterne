            margin-top: 52px;
        }

        .new-releases-shop-look__card {
            max-width: 100%;
            display: block;

            .new-releases-shop-look__link {
                margin: 0 30px;

                @media (min-width: 481px) {
                    margin: 0 24px;
                }

                @media (min-width: 676px) {
                    margin: 0 52px;
                }

                @media (min-width: 991px) {
                    margin: 0 70px;
                }
            }
        }
    }
