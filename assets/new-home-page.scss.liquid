// NEW HOME PAGE
.hidden-hover {
    overflow: hidden;
}

.home-page-title {
    color: #2B2B2B;
    font-size: 26px;
    line-height: 30px;
    margin-bottom: 26px;
    display: flex;
    align-items: center;
    justify-content: center;

    @media (min-width: 481px) {
        font-size: 38px;
        line-height: 45px;
    }

    @media (min-width: 991px) {
        font-size: 40px;
        line-height: 47px;
        margin-bottom: 31px;
    }
}

.img {
    max-width: 100%;
    height: auto;
    display: block;
}

.swiper-slide {
    text-decoration: none;
    max-height: 100% !important;
}

.new-releases, .styles-slider {
    .swiper-button-prev, .swiper-button-next {
        top: calc(50% - 32px);
        transform: translateY(-50%);
        margin-top: 0;
        width: 30px;
        height: 30px;
        background: #2B2B2B;
        color: #fff;
        border-radius: 100%;
        transition: opacity .5s ease-in-out;

        @media (min-width: 481px) {
            top: calc(50% - 24px);
            width: 25px;
            height: 25px;
        }

        &:hover {
            opacity: .8;
        }

        &.swiper-button-disabled {
            &:hover {
                opacity: .35;
            }
        }

        &:after {
            font-size: 16px;
            line-height: 0;

            @media (min-width: 481px) {
                font-size: 13px;
            }
        }
    }

    .swiper-button-next {
        right: -44px;

        &:after {
            margin-right: -2px;
        }
    }

    .swiper-button-prev {
        left: -44px;

        &:after {
            margin-left: -2px;
        }
    }
}

// Home page section - hero + bestselling loungewear
.hero {
    display: flex;
    padding: 27px 0 35px !important;
    height: 335px;

    @media (min-width: 768px) {
        padding: 35px 0 48px !important;
        height: 613px;
    }

    .wrapper {
        &.y-top {
            align-self: flex-start;
        }

        &.y-mid {
            align-self: center;
        }

        &.y-bot {
            align-self: flex-end;
        }

        &.a-left {
            margin: 0;
            justify-content: flex-start;

            .hero__text {
                align-items: flex-start;
            }

            .hero__text_title {
                text-align: left;
            }
        }

        &.a-right {
            margin: 0 0 0 auto;
            justify-content: flex-end;

            .hero__text {
                align-items: flex-end;
            }

            .hero__text_title {
                text-align: right;
            }
        }

        .hero__text {
            &.white {
                .hero__text_title {
                    color: #fff;
                }

                .hero__text_button {
                    color: #fff;
                    background: #2B2B2B;

                    &:hover {
                        background: #222222;
                        box-shadow: 0 2px 20px -2px #1b213a66;
                    }
                }
            }

            &.black {
                .hero__text_title {
                    color: #2B2B2B;
                }

                .hero__text_button {
                    color: #2B2B2B;
                    background: #fff;

                    &:hover {
                        background: #fff;
                        box-shadow: 0 2px 20px -2px rgba(255, 255, 255, 0.35);
                    }
                }
            }
        }
    }
}

.hero, .new-releases-shop-loungewear {
