// NEW HOME PAGE
.hidden-hover {
    overflow: hidden;
}

.home-page-title {
    color: #2B2B2B;
    font-size: 26px;
    line-height: 30px;
    margin-bottom: 26px;
    text-align: center;

    @media (min-width: 481px) {
        font-size: 38px;
        line-height: 45px;
    }

    @media (min-width: 991px) {
        font-size: 40px;
        line-height: 47px;
        margin-bottom: 31px;
    }
}

.img {
    max-width: 100%;
    height: auto;
    display: block;
}

.swiper-slide {
    text-decoration: none;
    max-height: 100% !important;
}

.new-releases, .styles-slider {
    .swiper-button-prev, .swiper-button-next {
        top: calc(50% - 32px);
        transform: translateY(-50%);
        margin-top: 0;
        width: 30px;
        height: 30px;
        background: #2B2B2B;
        color: #fff;
        border-radius: 100%;
        transition: opacity .5s ease-in-out;

        @media (min-width: 481px) {
            top: calc(50% - 24px);
            width: 25px;
            height: 25px;
        }

        &:hover {
            opacity: .8;
        }

        &.swiper-button-disabled {
            &:hover {
                opacity: .35;
            }
        }

        &:after {
            font-size: 16px;
            line-height: 0;

            @media (min-width: 481px) {
                font-size: 13px;
            }
        }
    }

    .swiper-button-next {
        right: -44px;

        &:after {
            margin-right: -2px;
        }
    }

    .swiper-button-prev {
        left: -44px;

        &:after {
            margin-left: -2px;
        }
    }
}

