.shop-the-look {
    padding-top: 65px;

    .shop-the-look__wrapper {
        display: flex;
        flex-flow: column;
        align-items: center;
    }

    .shop-the-look__title {
        font-size: 26px;
        line-height: 30px;
        text-transform: uppercase;
        margin-bottom: 33px;
        text-align: center;

        @media (min-width: 481px) {
            font-size: 40px;
            line-height: 47px;
            margin-bottom: 65px;
        }
    }

    .shop-the-look__top-block {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-flow: column;
        margin-bottom: 45px;
        width: 100%;

        @media (min-width: 481px) {
            margin-bottom: 60px;
        }

        .shop-the-look__image {
            width: 100%;
            display: block;

            @media (min-width: 481px) {
                max-width: 350px;
            }

            &.w-100 {
                max-width: 530px;
                height: auto;
            }
        }

        .shop-the-look__description {
            display: block;
            font-size: 16px;
            line-height: 22.4px;
            max-width: 648px;
            width: 100%;
            margin-top: 45px;

            @media (min-width: 481px) {
                font-size: 22px;
                line-height: 33px;
                margin-top: 60px;
            }
        }
    }

    .shop-the-look__bottom-block {
        display: flex;
        flex-flow: wrap;
        justify-content: center;
        margin: -16px -9px;
        width: calc(100% + 18px);
        max-width: 560px;

        @media (min-width: 481px) {
            margin: -20px -15px;
            width: calc(100% + 30px);
        }

        .shop-the-look__card {
            padding: 16px 9px;
            max-width: 50%;
            width: 100%;
            display: flex;
            flex-flow: column;
            justify-content: space-between;

            @media (min-width: 481px) {
                padding: 20px 15px;
            }

            .hidden-hover {
                max-width: 250px;
                text-decoration: none;

                .lazy-image {
                    overflow: hidden;
                }

                &:hover {
                    img {
                        transform: scale(1.15);
                    }
                }

                img {
                    transition: all 1.5s ease-in-out;
                }

                .shop-the-look__product-title {
                    text-transform: uppercase;
                    font-size: 14px;
                    line-height: 16px;
                    max-width: 181px;
                    text-align: center;
                    display: block;
                    margin: 10px auto 0;

                    @media (min-width: 481px) {
                        margin: 16px auto 0;
                    }
                }
            }

            .shop-the-look__add {
                .add-to-cart__wrapper {
                    margin: 16px auto 0;

                    @media (min-width: 481px) {
                        margin: 22px auto 0;
                        max-width: 212px;
                    }

                    #smartwishlist {
                        display: none !important;
                    }

                    .addToCart {
                        background-color: #2e3438;
                        color: #f7f7f7;
                        transition: all .5s ease-in-out;
                        padding: 7px 12px;
                        line-height: 16px;

                        @media (min-width: 481px) {
                            padding: 14px 20px;
                        }

                        &:hover {
                            box-shadow: 0 2px 20px -2px rgba(27, 33, 58, 0.4);
                        }
                    }
                }
            }
        }
    }
}